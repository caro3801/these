\newcommand*{\boitemagique}[2]{
	\begin{center}
		\begin{tikzpicture}
		% la boite
		\node[rectangle,draw=fondtitre!100,fill=fonddeboite!100,inner sep=10pt, inner 
		ysep=20pt] (mabox)
		{
			\begin{minipage}{12cm}
			#2
			\end{minipage}
		};
		% le titre de la boite
		\node[fill=fondtitre!100, text=white, rectangle] at (mabox.north) 
		{\sffamily\textbf{#1}};
		\end{tikzpicture}
	\end{center}
}

